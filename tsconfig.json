{
    "compilerOptions": {
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "noUnusedLocals": true,
        "skipLibCheck": true,
        "strictNullChecks": true,
        "target": "es2016",
        "lib": ["es2016", "es2017"],
        "rootDir": "src",
        "declaration": true,
        "outDir": "lib"
    },
    "include": [
        "src/*"
    ],
    "exclude": [
        "node_modules"
    ]
}